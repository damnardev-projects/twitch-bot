<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" hgap="5.0"
		  maxHeight="1.7976931348623157E308"
		  maxWidth="1.7976931348623157E308" prefHeight="600" prefWidth="800"
		  vgap="5.0" xmlns="http://javafx.com/javafx/17.0.12"
		  fx:controller="fr.damnardev.twitch.bot.primary.javafx.controller.ApplicationController">
	<rowConstraints>
		<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS"/>
		<RowConstraints minHeight="10.0" prefHeight="30.0"/>
		<RowConstraints minHeight="10.0" prefHeight="30.0"/>
	</rowConstraints>
	<columnConstraints>
		<ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
		<ColumnConstraints hgrow="ALWAYS" prefWidth="100.0"/>
		<ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
	</columnConstraints>

	<TableView fx:id="tableView" GridPane.columnIndex="0" GridPane.columnSpan="3"
			   GridPane.rowIndex="0" editable="true">
		<columns>
			<TableColumn fx:id="columnId" maxWidth="100" text="Id" editable="false"/>
			<TableColumn fx:id="columnName" maxWidth="Infinity" text="Name"
						 editable="false"/>
			<TableColumn fx:id="columnEnabled" maxWidth="100" text="Enables"/>
		</columns>
	</TableView>

	<Label maxWidth="1.7976931348623157E308" text="Channel Name:" GridPane.columnIndex="0"
		   GridPane.fillHeight="1" GridPane.fillWidth="1" GridPane.rowIndex="1"/>

	<TextField fx:id="textFieldChannelName" GridPane.columnIndex="1"
			   GridPane.rowIndex="1"/>

	<Button alignment="CENTER" maxWidth="1.7976931348623157E308"
			onAction="#onAddChannelClick" text="Add" GridPane.columnIndex="2"
			GridPane.rowIndex="1"/>

	<Label fx:id="labelMessage" maxWidth="1.7976931348623157E308" GridPane.columnIndex="0"
		   GridPane.columnSpan="3" GridPane.rowIndex="2"/>
	<padding>
		<Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
	</padding>

</GridPane>
