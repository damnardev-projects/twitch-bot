<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:controller="fr.damnardev.twitch.bot.primary.javafx.controller.ChannelManagementController" maxHeight="1.7976931348623157E308"
	  maxWidth="1.7976931348623157E308" prefHeight="500" prefWidth="600"
	  xmlns="http://javafx.com/javafx/17.0.12"
	  xmlns:fx="http://javafx.com/fxml/1">

	<TableView VBox.vgrow="ALWAYS" editable="true" fx:id="tableView">
		<columns>
			<TableColumn editable="false" fx:id="columnId" maxWidth="100" minWidth="100"
						 prefWidth="-1.0" style="-fx-alignment: CENTER-RIGHT" text="Id"/>
			<TableColumn editable="false" fx:id="columnName"
						 maxWidth="1.7976931348623157E308" prefWidth="-1.0"
						 style="-fx-alignment: CENTER-LEFT" text="Name"/>
			<TableColumn fx:id="columnEnabled" maxWidth="100" minWidth="100"
						 prefWidth="-1.0" text="Enabled"/>
			<TableColumn editable="false" fx:id="columnOnline" maxWidth="100"
						 minWidth="100" prefWidth="-1.0" text="Online" />
			<TableColumn editable="false" fx:id="columnDeleted" maxWidth="100"
						 minWidth="100" prefWidth="-1.0" sortable="false"/>
		</columns>
		<columnResizePolicy>
			<TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
		</columnResizePolicy>
	</TableView>

	<HBox alignment="CENTER_LEFT" spacing="5.0">
		<Label contentDisplay="CENTER" minWidth="100" text="Channel Name:"/>
		<TextField HBox.hgrow="ALWAYS" fx:id="textFieldChannelName"/>
		<Button alignment="CENTER" maxWidth="1.7976931348623157E308" minWidth="100"
				onAction="#onButtonAdd" text="Add"/>
		<padding>
			<Insets left="5.0" right="5.0" top="5.0"/>
		</padding>
	</HBox>

</VBox>
